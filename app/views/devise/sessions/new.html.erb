<div class="d-flex flex-column justify-content-center registration-main-wrapper" >
<div class="container d-flex flex-column justify-content-around registration-input-wrapper w-50" >
<h2 class="text-center pt-4" >Log in</h2>

<div class="w-100" >
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3 d-flex justify-content-center">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email", class: "email w-50 rounded p-2"  %>
  </div>

  <div class="field mb-3 d-flex justify-content-center pt-2">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "email w-50 rounded p-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3 justify-content-center text-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions justify-content-center text-center">
    <%= f.submit "Log in ", class: "w-50 p-2 sign-up-button" %>
  </div>
<% end %>

</div>

<div class=" mb-3 justify-content-center text-center">
<h6 class="text-center mb-3">Don't have an account?</h6>
  <%= render "devise/shared/links" %>
</div>
</div>