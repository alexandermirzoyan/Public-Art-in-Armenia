<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="m-auto w-50" >
      <%= label_tag(:for_art_name, "Art name", id: "asd") %>
      <%= form.text_field :art_title, placeholder: 'Enter art name', class: "form-control", id: "for_art_name" %>
  </div>
  <div class="m-auto w-50" >
      <%= label_tag(:for_art_place, "Art place") %>
      <%= form.text_field :posts_content, placeholder: 'Enter art place', class: "form-control", id: "for_art_place" %>
  </div>

  <div class="d-flex justify-content-center actions">
    <%= form.submit %>
  </div>
<% end %>
