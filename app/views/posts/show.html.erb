<%= @post.posts_content %>
<%= @post.art_title %>
<%= image_tag post_image(@post), size: '200x200', class: 'mx-auto d-block' %> 

<div id="map" style="height:400px; width:600px;"><%=
    map(:center => {
    :latlng => [@post.latitude, @post.longitude],
    :zoom => 18
    },
    :markers => [{
    :latlng => [@post.latitude, @post.longitude],
    :zoom => 18
    }])
%>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
