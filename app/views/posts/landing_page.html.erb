<div class="list-background-wrapper h-100">
<h1 class="text-white d-flex justify-content-center p-3">Posts</h1>

<form class="d-flex justify-content-center mb-4"  action="/search" >
    <div class="input-group mb-3 w-50">
    <input type="text" class="form-control"  name="q"  placeholder="Search your city" aria-label="Recipient's username" aria-describedby="button-addon2">
    <div class="input-group-append">
        <input class="btn btn-outline-light" type="submit" id="button-addon2" >
    </div>
    </div>
</form>

<div class="container" >
    <div class="row" >
        <% @posts.each do |post| %>
            <div class="col-xs-12 col-sm-6 col-md-4 mb-4 ">
                <div class="card">
                    <div class="view overlay p-5">
                        <%= image_tag post_image(post), size: '200x200', class: 'mx-auto d-block mw-100' %> 
                    </div>

                    <div class="card-body">
                        <h4 class="card-title"><%= post.art_title %></h4>
                        
                        <p class="card-text"> <%= post.posts_content%> </p>
                        
                        <%= link_to 'Show More', post %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>